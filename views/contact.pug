extend base.pug

block style
    style
        include ../static/style.css
        include ../static/contactstyle.css
        
block content 
    .container 
        h1 Contact Us 
        form(action="/contact",method="post",class="myform")
            input(type="text", class="myinput", name="name", placeholder="Enter your name")
            input(type="number", class="myinput", name="mobile_no", placeholder="Enter your mobile_no")
            input(type="email", class="myinput", name="email_Id", placeholder="Enter your email-Id")
            input(type="text", class="myinput", name="gender", placeholder="Enter your gender")
            input(type="address", class="myinput", name="address", placeholder="Enter your address")
            button.btn Submit  
    
